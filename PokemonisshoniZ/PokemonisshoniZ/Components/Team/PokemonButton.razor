@using PokemonDataAccess.Models
@using PokemonisshoniZ.Data

@* @inject ApplicationDbContext _context *@

<RadzenButton Variant="Variant.Text" ContextMenu="ContextMenu" Click="Click" Style="width:150px; height:150px">
    @if (pokemon != null)
    {
        <RadzenImage Style="width:100px; height:100px" Path=@($"https://play.pokemonshowdown.com/sprites/gen5/{pokemon.PSImgName}.png")>

        </RadzenImage>
    }
    else
    {
        <RadzenImage Style="width:100px; height:100px" Path=@($"Image/img_pokei128/icon0000_f00_s0.png")>

        </RadzenImage>
    }
</RadzenButton>

@code {
    [Parameter] public PSPokemon pokemon { get; set; }

    [Parameter]
    public Action<MouseEventArgs> ContextMenu{ get; set; }
    [Parameter]
    public Action<MouseEventArgs> Click { get; set; }
    
}
